<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    card_view:cardElevation="6dp"
    card_view:contentPadding="10dp"
    card_view:cardCornerRadius="6dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/outputName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/outputDeviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device: "
                android:textSize="15sp" />


            <TextView
                android:id="@+id/outputValId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Output Variable ID: "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/outputType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Output type: "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/outputId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Output ID:"
                android:textSize="15sp" />
        </LinearLayout>

</android.support.v7.widget.CardView>
