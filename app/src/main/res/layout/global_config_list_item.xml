<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:contentPadding="10dp"
        card_view:cardCornerRadius="6dp"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inputName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/variable_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/inputDeviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/variable_type"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/inputValId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Variable ID: "
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="250dp"
                    android:hint="Value(0-1024)"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/globalValue"/>

                <Button
                    android:id="@+id/globalButton"
                    android:text="SEND"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>